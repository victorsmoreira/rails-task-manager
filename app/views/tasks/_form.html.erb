<%= form_for(task, html:{ class: 'border-bottom py-4' }) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control'%>
  </div>
  <div class="form-inline">
    <%= f.label :completed unless task.new_record? %>
    <%= f.check_box :completed, class: 'form-control m-2' unless task.new_record? %>
  </div>
  <div>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
